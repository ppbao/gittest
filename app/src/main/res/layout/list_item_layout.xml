<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:layout_margin="2dp"
    android:background="#FFFFFF">

    <LinearLayout style="@style/linearLayoutVerticle">

        <LinearLayout
            style="@style/linearLayoutHorizontal"
            android:weightSum="5">

            <TextView
                style="@style/listitem_headerText"
                android:text="@string/item_destination_text" />


            <TextView
                android:id="@+id/textview_title"
                style="@style/listitem_normalText" />


        </LinearLayout>

        <LinearLayout
            style="@style/linearLayoutHorizontal"
            android:weightSum="5">

            <TextView
                style="@style/listitem_headerText"
                android:text="@string/item_predictive_time_text" />


            <TextView
                android:id="@+id/textview_time"
                style="@style/listitem_normalText" />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>